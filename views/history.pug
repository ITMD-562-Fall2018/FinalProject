extends layout.pug

block content
  include ./partials/inAppNav.pug
  h1.mt-2 Stocks
  table.table.table-sm.table-responsive
    thead
      tr
        th(scope='col') Name
        th(scope='col') Symbol
        th(scope='col') LastPrice
        th(scope='col') Change
        th(scope='col') High
        th(scope='col') Low
        th(scope='col') Open
        th(scope='col') By
        th(scope='col') Search Time
        th(scope='col')
    tbody
      each company in stocks
        tr
          td= company.Name
          td= company.Symbol
          td= company.LastPrice
          td= company.Change
          td= company.High
          td= company.Low
          td= company.Open
          td= company.user.Name
          td= company.DateCreated
          td 
            form(method='POST' action='./history/'+company.Symbol+'/'+company.LastPrice+"?_method=DELETE")
              button.btn.btn-default.btn-md.bg-danger.text-white.font-weight-bold(type='submit')
                | Delete
